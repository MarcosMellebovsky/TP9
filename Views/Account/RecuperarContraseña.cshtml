<h2>Recuperar Contraseña</h2>

@if (ViewBag.ContraseñaRecuperada != null)
{
    <p>Tu contraseña es: @ViewBag.ContraseñaRecuperada</p>
}
else
{
    <form action='@Url.Action("RecuperarContraseña", "Account")' method="post">
        <label for="UserName">Nombre de Usuario:</label>
        <input type="text" name="UserName" required>
        <button type="submit">Recuperar Contraseña</button>
        @if (ViewBag.ErrorRecuperación != null)
        {
            <p class="error">@ViewBag.ErrorRecuperación</p>
        }
    </form>
}
